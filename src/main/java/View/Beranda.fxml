<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:controller="Controller.BerandaController" 
            prefHeight="600.0" prefWidth="800.0" 
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    
    <children>
        <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="580.0" prefWidth="780.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Form Input Pesanan Restoran" style="-fx-font-size: 18pt; -fx-font-weight: bold;">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </Label>
                
                <GridPane hgap="10.0" vgap="10.0" prefWidth="780.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                    </columnConstraints>
                    
                    <Label text="Tanggal Pesanan:" />
                    <DatePicker fx:id="dpTanggal" promptText="Pilih Tanggal" GridPane.columnIndex="1" />
                    
                    <Label text="Nama Pemesan:" GridPane.rowIndex="1" />
                    <TextField fx:id="txtPemesan" promptText="Masukkan Nama Pemesan" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    
                    <Label text="Nama Makanan:" GridPane.rowIndex="2" />
                    <TextField fx:id="txtMakanan" promptText="Masukkan Nama Makanan" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    
                    <Label text="Harga (Rp):" GridPane.rowIndex="3" />
                    <TextField fx:id="txtHarga" promptText="Masukkan Harga (contoh: 25000)" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Metode Pembayaran:" GridPane.rowIndex="4" />
                    <ChoiceBox fx:id="cbPembayaran" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                </GridPane>
                
                <HBox alignment="CENTER" spacing="10.0">
                    <VBox.margin>
                        <Insets top="20.0" bottom="20.0" />
                    </VBox.margin>
                    <Button fx:id="btnTambah" mnemonicParsing="false" onAction="#handleTambahPesanan" text="Tambah Pesanan" />
                    <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#handleUpdatePesanan" text="Ubah Data" />
                    <Button fx:id="btnHapus" mnemonicParsing="false" onAction="#handleHapusPesanan" text="Hapus Pesanan" />
                </HBox>
                
                <TableView fx:id="tabelPesanan" prefHeight="200.0" prefWidth="780.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colTanggal" prefWidth="150.0" text="Tanggal" />
                        <TableColumn fx:id="colPemesan" prefWidth="180.0" text="Nama Pemesan" />
                        <TableColumn fx:id="colMakanan" prefWidth="250.0" text="Nama Makanan" />
                        <TableColumn fx:id="colHarga" prefWidth="150.0" text="Harga (Rp)" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                
            </children>
        </VBox>
    </children>
</AnchorPane>
